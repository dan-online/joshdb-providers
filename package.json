{
	"name": "root",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"generate": "node scripts/generate/generate.mjs",
		"clean": "rimraf packages/**/dist packages/**/node_modules/.cache",
		"lint": "eslint packages --ext mjs,ts --fix",
		"format": "prettier --write packages/**/*.{mjs,ts}",
		"test": "jest --verbose",
		"build": "yarn workspaces run build",
		"prepublishOnly": "yarn workspaces run prepublishOnly",
		"update": "yarn upgrade-interactive --latest",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.1.0",
		"@commitlint/config-conventional": "^16.0.0",
		"@favware/rollup-type-bundler": "^1.0.5",
		"@sapphire/eslint-config": "^4.0.11",
		"@sapphire/ts-config": "^3.1.8",
		"@types/jest": "^27.0.2",
		"@types/node": "^17.0.10",
		"@types/prompts": "^2.0.14",
		"@types/uuid": "^8.3.1",
		"@typescript-eslint/eslint-plugin": "^5.10.0",
		"chalk": "^5.0.0",
		"eslint": "~8.6.0",
		"eslint-config-prettier": "^8.3.0",
		"husky": "^7.0.4",
		"jest": "^27.2.5",
		"jest-circus": "^27.2.5",
		"lint-staged": "^12.3.1",
		"ora": "^6.0.1",
		"prettier": "^2.4.1",
		"pretty-quick": "^3.1.1",
		"prompts": "^2.4.2",
		"rollup": "^2.66.0",
		"rollup-plugin-cleaner": "^1.0.0",
		"rollup-plugin-typescript2": "^0.31.1",
		"rollup-plugin-version-injector": "^1.3.3",
		"ts-jest": "^27.1.3",
		"ts-node": "^10.2.1",
		"typescript": "^4.5.5"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/josh-development/providers.git"
	},
	"engines": {
		"node": ">=16",
		"npm": ">=6"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"dependencies": {
		"eslint-plugin-prettier": "^4.0.0"
	}
}
